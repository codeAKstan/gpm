#!/bin/bash

# Loop through all files in the current directory and subdirectories
find . -type f | while read file; do
    # Check if the file contains ".php"
    if grep -q ".php" "$file"; then
        # Replace ".php" with ".php" in the file content
        sed -i 's/\.php\.html/\.php/g' "$file"
        echo "Updated $file"
    fi
done

echo "Content replacement complete."
